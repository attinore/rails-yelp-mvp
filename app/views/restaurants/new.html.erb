<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :category, as: :radio_buttons, collection: Restaurant::CATEGORY, wrapper: :vertical_collection_inline %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "Add new restaurant", class: "btn btn-primary"%>
<% end %>
